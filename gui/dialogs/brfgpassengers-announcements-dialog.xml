<?xml version="1.0" encoding="UTF-8"?>
<!-- this file requires FlightGear version 2018.2 or newer -->
<PropertyList>
  <name>brfgpassengers-announcements-dialog</name>
  <layout>vbox</layout>

  <!-- Reminder, included are: Seatbelt, Departure, CrewDeparture, take-off, cruising, descending, brace -->

  <text>
    <label>Anuncios</label>
  </text>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <hrule/>

    <checkbox>
      <halign>left</halign>
      <label>Alerta de Cabine</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/cabinalert</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/cabinalert</property>
      </binding>
      <live>true</live>
    </checkbox>

    <!--checkbox>
      <halign>left</halign>
      <label>Nao Fume</label>
      <property>sim/sound/no-smoking-sign</property>
      <binding>
        <command>property-toggle</command>
        <property>sim/sound/no-smoking-sign</property>
      </binding>
      <live>true</live>
    </checkbox>

    <hrule/-->

    <checkbox>
      <halign>left</halign>
      <label>Bem Vindo a Bordo</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/welcome</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/welcome</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Procedimentos de Seguranca</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/safety</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/safety</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Decolagem Autorizada</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/prepareto</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/prepareto</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Subindo para Altitude de Cruzeiro</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/climbimg</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/climbimg</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Aviso Antes de Turbulencia</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/beforeturb</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/beforeturb</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Aviso Durante Turbulencia</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/turb</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/turb</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Servico de Bordo</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/boardservice</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/boardservice</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Pouso autorizado</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/prepareld</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/prepareld</property>
      </binding>
      <live>true</live>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Procedimentos Seguranca Apos Pouso</label>
      <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/afterld</property>
      <binding>
        <command>property-toggle</command>
        <property>/addons/by-id/github.renanmsv.addons.BRFGPassengers/sounds/afterld</property>
      </binding>
      <live>true</live>
    </checkbox>
  </group>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>

</PropertyList>
